<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="ns.sql.MyProductMapper">
<sql id="select-myProduct">
	SELECT id,name,maker,price
	FROM myproduct
</sql>

<insert id="addProduct" parameterType="myProduct">
	INSERT INTO myproduct(name,maker,price) VALUES(#{name},#{maker},#{price})
</insert>

<!-- 하나의 select 쿼리로 3가지 동작을 할 수있는 동적쿼리를 작성 -->
<select id="findProducts" resultType="myProduct" parameterType="hashmap">
	<include refid="select-myProduct" />
	<trim prefix="where" prefixOverrides="OR">
		<if test="command.equals('findProductByName')">
			name LIKE CONCAT('%',#{word})
		</if>
		<if test="command=='findProductByMaker'">
			maker = #{word}
		</if>
	</trim>
</select>

